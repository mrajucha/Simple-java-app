pipeline {
    agent any
    tools{
        maven 'Default'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
                          branches: [[name: 'main']], 
                          userRemoteConfigs: [[url: 'https://github.com/mrajucha/Simple-java-app.git']]])
            }
        }
        stage('maven clean inatall'){
            steps{
                sh 'mvn clean install'
            }
        }
        stage('Build Docker Image'){
            steps{
                script{
                    sh 'docker build -t java-demo-app.jar .'
                }
            }
        }
    }
}


